apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: http-ingress
  namespace: NAMESPACE
  annotations:
    kubernetes.io/ingress.class: contour
  labels:
    app: breathtestshiny
spec:
  tls:
  - hosts:
    - breathtestshiny.DNS_DOMAIN
    secretName: https-secret
  rules:
  - host: fortune.DNS_DOMAIN
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: fortune-service
            port:
              number: 80



apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: http-ingress
  namespace: NAMESPACE
  annotations:
    kubernetes.io/ingress.class: contour
  labels:
    app: breathtestshiny
spec:
  rules:
  - host: breathtestshiny.DNS_DOMAIN
    http:
      paths:
      - path: /
        backend:
          serviceName: breathtestshiny
          servicePort: 3838
